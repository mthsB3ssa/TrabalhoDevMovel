<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="MainButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DrawerLayoutPatrimonyBalanceAmount" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/default_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerLayoutSecondaryAssetsBalanceAmount" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/default_subtitle_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerLayoutSecondaryAssetsBalanceLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/default_paragraph_text_size</item>
    </style>

    <style name="DrawerLayoutSecondaryAssetsWrapper" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
    </style>

    <!-- Amount Types TextViews -->
    <style name="AmountTypeCredit" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="AmountTypeDebit" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="AmountTypeTransfer" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <!-- TabLayout -->
    <style name="DefaultTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@null</item>
    </style>

    <!-- Bottom Sheet Label/Value -->
    <style name="BottomSheetValue">
        <item name="android:layout_marginVertical">@dimen/default_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin_half</item>
        <item name="android:background">@drawable/rounded_all_corners_shape</item>
        <item name="android:backgroundTint">@color/colorBottomSheetValueBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/default_paragraph_bigger_text_size</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textColor">@color/white</item>-->
    </style>

    <style name="BottomSheetDialogThemeNoFloating">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>
</resources>